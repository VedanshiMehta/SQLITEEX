<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

       <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" STUDENTS MARKS"
            android:gravity="center_horizontal"
            android:textColor="#FF033E"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/titletextUD"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Name:"
            android:textSize="20dp"
            android:id="@+id/textViewUD1"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:layout_marginLeft="10dp"
            android:id="@+id/editTextUD1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surname:"
            android:textSize="20dp"
            android:id="@+id/textViewUD2"/>
         <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:layout_marginLeft="10dp"
            android:id="@+id/editTextUD2"/>

    </LinearLayout>
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Marks:"
            android:textSize="20dp"
            android:id="@+id/textViewUD3"/>
         <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:layout_marginLeft="10dp"
            android:id="@+id/editTextUD3"/>

    </LinearLayout>
          <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Id:"
            android:textSize="20dp"
            android:id="@+id/textViewUD4"/>
         <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:layout_marginLeft="10dp"
            android:id="@+id/editTextUD4"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        tools:ignore="MissingDimension">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPDATE"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:id="@+id/buttonU"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DELETE"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:layout_gravity="center_horizontal"
            android:id="@+id/buttonD"/>
    </LinearLayout>

</LinearLayout>
